<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="311dp"
            android:layout_height="102dp" app:srcCompat="@drawable/logo"
            tools:layout_editor_absoluteX="50dp" android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView"/>
    <TextView
            android:text="@string/text_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/textView" android:textColor="@android:color/black"
            android:textSize="24sp" android:gravity="center" app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintBottom_toTopOf="@+id/editAlcool"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Preço Alcool Ex: 2,49"
            android:ems="10"
            tools:layout_editor_absoluteX="99dp" android:id="@+id/editAlcool"
            android:hint="Preço Alcool Ex: 2,49" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/editGasolina"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Preço Gasolina Ex: 4,09"
            android:ems="10"
            tools:layout_editor_absoluteX="99dp" android:id="@+id/editGasolina"
            android:hint="Preço Gasolina Ex: 4,09" app:layout_constraintTop_toBottomOf="@+id/editAlcool"
            app:layout_constraintBottom_toTopOf="@+id/button"/>
    <Button
            android:text="Calcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="158dp" android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/editGasolina"
            app:layout_constraintBottom_toTopOf="@+id/textResultado" android:onClick="calcularPreco"/>
    <TextView
            android:text="Nenhuma opção escolhida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="109dp" android:id="@+id/textResultado" android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/button"
    />
</android.support.constraint.ConstraintLayout>